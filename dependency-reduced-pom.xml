<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>bigdatastage3</groupId>
  <artifactId>stage-3</artifactId>
  <name>stage2</name>
  <version>1.0.0</version>
  <url>http://maven.apache.org</url>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
        <configuration>
          <mainClass>bigdatastage2.IndexApi</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <id>shade-ingesting</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>bigdatastage2.IngestingAPI</mainClass>
                </transformer>
              </transformers>
              <finalName>IngestingAPI</finalName>
              <outputFile>${project.build.directory}/IngestingAPI.jar</outputFile>
            </configuration>
          </execution>
          <execution>
            <id>shade-indexing</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>bigdatastage2.IndexingAPI</mainClass>
                </transformer>
              </transformers>
              <finalName>IndexingAPI</finalName>
              <outputFile>${project.build.directory}/IndexingAPI.jar</outputFile>
            </configuration>
          </execution>
          <execution>
            <id>shade-searching</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>bigdatastage2.SearchAPI</mainClass>
                </transformer>
              </transformers>
              <finalName>SearchAPI</finalName>
              <outputFile>${project.build.directory}/SearchAPI.jar</outputFile>
            </configuration>
          </execution>
          <execution>
            <id>shade-controlling</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>bigdatastage3.ControllingUnit</mainClass>
                </transformer>
              </transformers>
              <finalName>ControllingUnit</finalName>
              <outputFile>${project.build.directory}/ControllingUnit.jar</outputFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.openjdk.jmh</groupId>
      <artifactId>jmh-generator-annprocess</artifactId>
      <version>1.35</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.target>17</maven.compiler.target>
    <maven.compiler.source>17</maven.compiler.source>
  </properties>
</project>
